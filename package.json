{
  "name": "traffic-tracker",
  "version": "1.0.0",
  "description": "Cloudflare Worker that collects travel time estimates between multiple destinations using the Google Maps Directions API",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "css:build": "postcss ./src/styles/input.css -o ./src/styles/output.css --minify && node scripts/inline-css.js",
    "css:watch": "postcss ./src/styles/input.css -o ./src/styles/output.css --watch",
    "prebuild": "pnpm run css:build",
    "predeploy": "pnpm run css:build",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:darius": "wrangler deploy --env darius",
    "deploy:kate": "wrangler deploy --env kate",
    "db:create": "wrangler d1 create traffic-tracker",
    "db:init": "wrangler d1 execute traffic-tracker --remote --file=migrations/000-initial.sql",
    "db:migrate": "wrangler d1 execute traffic-tracker --remote --file=migrations/001-predictions.sql",
    "db:create:kate": "wrangler d1 create kate-traffic-tracker",
    "db:init:kate": "wrangler d1 execute kate-traffic-tracker --remote --file=migrations/000-initial.sql",
    "db:migrate:kate": "wrangler d1 execute kate-traffic-tracker --remote --file=migrations/001-predictions.sql",
    "routes:push": "node scripts/push-routes.js",
    "routes:push:darius": "ENV=darius node scripts/push-routes.js",
    "routes:push:kate": "ENV=kate node scripts/push-routes.js"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@csstools/postcss-media-queries-aspect-ratio-number-values": "^3.0.5",
    "@types/js-yaml": "^4.0.9",
    "autoprefixer": "^10.4.23",
    "js-yaml": "^4.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-discard-comments": "^7.0.5",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nested": "^7.0.2",
    "postcss-nesting": "^13.0.2",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.7.2",
    "wrangler": "^4"
  }
}
